<h2 class="sub-header">Listing Orders</h2>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Status</th>
      <th>Author</th>
      <th>Category</th>
      <th>Created at</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.description %></td>
        <td><%= order.status %></td>
        <td><%= order.author.name %></td>
        <td><%= order.category.name %></td>
        <td><%= order.created_at.strftime("%d/%m/%Y") %></td>
        <td>
          <%= t("order.published_at", :time =>time_ago_in_words(order.created_at)) %>
        </td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div><!-- table-responsive -->

<br>

<div class="btn-group">
  <button type="button" class="btn btn-default"><%= link_to 'New order', new_order_path %></button>
  <button type="button" class="btn btn-default"><%= link_to 'New Author', new_author_path %></button>
  <button type="button" class="btn btn-default"><%= link_to 'New Category', new_category_path %></button>
</div>

