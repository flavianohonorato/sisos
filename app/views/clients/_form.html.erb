<%= form_for @client do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>  
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>  
  </p>

  <p>
    <%= f.label :phone %>
    <%= f.text_field :phone %>  
  </p>

  <p>
    <%= f.label :birthday %>
    <%= f.date_select :birthday, start_year: 1950 %>  
  </p>

  <p>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </p>
  
  <p><%= f.submit 'Save' %></p>
  
<% end %>