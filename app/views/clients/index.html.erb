<table>
	<tr>
		<td><strong>Name </strong></td>
		<td><strong>Birthday </strong></td>
		<td><strong>Telephone </strong></td>
	</tr>
  <% @clients.each do |client| %>
	<tr>
		<td><%=client.name %></td>
		<td><%=client.birthday %></td>
		<td><%=client.phone %></td>
		<td>
			<%=link_to 'Details', client %> | 
			<%=link_to 'Edit', edit_client_path(client) %> |
			<%=link_to 'Destroy', client, method: :delete, confirm: 'You sure?' %>
		</td>
	</tr>
  <% end %>
</table>

<h3><%= link_to 'Add New Client', new_client_path %> </h3>